<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="textStart"
    tools:context=".MainActivity">
<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--    xmlns:tools="http://schemas.android.com/tools"-->
<!--    android:orientation="vertical"-->
<!--    android:layout_width="fill_parent"-->
<!--    android:layout_height="fill_parent"-->
<!--    tools:context=".MainActivity">-->
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="542dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#C4E2FE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_countryName"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Country"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/job_search"
                android:textColor="#000000" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/logo"
                android:textColor="#004382"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/lang_change"
                android:textColor="#000000" />

            <TextView
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/roles_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
<!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"-->
<!--                tools:layout_editor_absoluteX="30dp"-->
<!--                tools:layout_editor_absoluteY="88dp" />-->
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#9CCBF3">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_what" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EDEDED"
                        android:hint="" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#9CCBF3">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/job_where" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EDEDED"
                        android:hint="" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:background="#009DCCF4"
                    android:text="@string/go"
                    android:textColor="#3F51B5" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!--</LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>